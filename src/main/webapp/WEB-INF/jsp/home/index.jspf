<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt" %>
<title>Bienvenue</title>
<body>
	<section data-ng-controller="ArticleCtrl">
		<article data-ng-repeat="article in articles">
			<header>{{article.title}}</header>
			<time datetime="{{article.date}}">{{article.date | date : 'dd MMMM yyyy - HH:mm:ss'}}</time>
			<span data-ng-bind-html="article.content">{{article.content}}</span>
		</article>
	</section>
</body>